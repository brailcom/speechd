prefix = @prefix@
datadir = @datadir@
sysconfdir = @sysconfdir@
datarootdir = @datarootdir@
bash_profile_dir = @BASH_PROFILE_DIR@
speechd_default_port = $(shell grep SPEECHD_DEFAULT_PORT ../../intl/def.h | awk '{print $$3}')
speechd_system_start_cmd = @SPEECHD_SYSTEM_START_CMD@

all:
	sed -e "s/@SPEECHD_DEFAULT_PORT@/$(speechd_default_port)/" speechd-user-port.sh.in > speechd-user-port.sh
	sed -e "s#@SPEECHD_SYSTEM_STARTUP_CMD@#$(speechd_system_start_cmd)#" speechd-server-spawn.in > speechd-server-spawn

install:
	install -d -o root -m 755 $(DESTDIR)/$(bash_profile_dir)
	install -o root -m 644 speechd-user-port.sh $(DESTDIR)/$(bash_profile_dir)
	install -d -o root -m 755 $(DESTDIR)/@prefix@/bin
	install -o root -m 755 speechd-server-spawn $(DESTDIR)/@prefix@/bin
	install -d -o root -m 755 $(DESTDIR)/@mandir@/man1
	install -o root -m 644 speechd-server-spawn.1 $(DESTDIR)/@mandir@/man1

uninstall:
	rm -f $(DESTDIR)/$(bash_profile_dir)/speechd-user-port.sh
	rm -f $(DESTDIR)/@prefix@/bin/speechd-server-spawn
	rm -f $(DESTDIR)/@mandir@/man1/speechd-server-spawn.1

clean:
	rm -f speechd-user-port.sh
	rm -f speechd-server-spawn

distclean: clean

maintainer-clean: clean

distdir:

check:

